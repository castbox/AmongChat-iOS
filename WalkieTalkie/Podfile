    # Swift Pods
    pod 'R.swift', '~> 5.0.2'

    # UserDefaults
    pod 'SwiftyUserDefaults', '~> 5.0.0'
    # 键盘控制
    pod 'IQKeyboardManagerSwift', '~> 6.2.0'
    
    # tip view
#    pod 'EasyTipView', '~> 2.0.4'
    
    # RTC (Agora.io)
#    pod 'AgoraRtcEngine_iOS'
    pod 'AgoraAudio_iOS', '3.0.0.2'
