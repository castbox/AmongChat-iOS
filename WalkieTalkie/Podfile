#    # Firebase auth
#    pod 'Firebase/Auth'
    
    # log
    pod 'Firebase/Analytics'
    #, '6.1.0'
    
#    # in app messageing
#    pod 'Firebase/InAppMessagingDisplay'
end

# specify the version numbers in case of Podfile.lock missing
