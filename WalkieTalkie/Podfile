source 'git@github.com:CocoaPods/Specs.git'
source 'git@github.com:castbox/GuruSpecs.git'

def core_pods
    pod 'RxSwift', '5.1'
end

def ui_pods
    pod 'SnapKit', '~> 4.2.0'
    pod 'RxCocoa'
    pod 'RxGesture', '3.0.2'
